---
import getSlug from '@/js/getSlug';
import Brand from "../components/Brand.astro";
import GoTop from "../components/Gotop.astro";

const currentPath = Astro.url.pathname;
const currPage = getSlug(currentPath);

const response = await fetch(import.meta.env.API_SOFT);
const getSites = await response.json();
const currSite = getSites.find((site) => site.slug == currPage);

---
<footer class="container row pt-5 pb-10 xg:py-7 text-small" >
    <div class="col-[1/3] md:col-[1/3] xg:col-[1/2]" >
        <Brand width="w-40% md:w-full xg:w-25%" alt="Gridbox" ></Brand>
    </div>

    <div class="col-[3/5] md:col-[3/7] xg:col-[2/6] mb-3 xg:mb-0">
        I+D diseño <br>
        <a href="https://id.net.uy/"  class="link-underline" target='_blank' rel='noreferrer noopener' >https://id.net.uy/</a> <br>
        <a href="mailto:info@id.net.uy" class="link-underline" >info@id.net.uy</a>
    </div>

    <div class="col-[3/5] md:col-[7/12] xg:col-[7/10] flex justify-center xg:items-end flex-wrap">
        Actualización de Software <br class="hidden md:block">
        realizada el {currSite.acf.fecha}
    </div>
    
    <div class="col-[1/5] xg:col-[12/13] flex justify-end">
        <GoTop/>
    </div>

</footer>

